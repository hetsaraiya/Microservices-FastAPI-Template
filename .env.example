# Environment
ENVIRONMENT=DEV
DEBUG=True

# Backend Server
BACKEND_SERVER_HOST=0.0.0.0
BACKEND_SERVER_PORT=8000
BACKEND_SERVER_WORKERS=4

# Database - Postgres
POSTGRES_DB=your_db_name
POSTGRES_PASSWORD=your_db_password
POSTGRES_PORT=5432
POSTGRES_SCHEMA=postgresql
POSTGRES_USERNAME=your_db_user
POSTGRES_HOST=localhost
POSTGRES_URI={POSTGRES_SCHEMA}://{POSTGRES_USERNAME}:{POSTGRES_PASSWORD}@{POSTGRES_HOST}:{POSTGRES_PORT}/{POSTGRES_DB}

# Database - SQLAlchemy
DB_TIMEOUT=5
DB_POOL_SIZE=100
DB_MAX_POOL_CON=80
DB_POOL_OVERFLOW=20
IS_DB_ECHO_LOG=False
IS_DB_EXPIRE_ON_COMMIT=False
IS_DB_FORCE_ROLLBACK=True

# API Tokens
API_TOKEN=your-api-token
AUTH_TOKEN=your-auth-token

# Credentials
IS_ALLOWED_CREDENTIALS=True

# JWT Token
JWT_SECRET_KEY=your-jwt-secret-key
JWT_SUBJECT=your-jwt-subject
JWT_FORGOT_PASSWORD_SUBJECT=password-reset
JWT_TOKEN_PREFIX=your-token-prefix
JWT_ALGORITHM=HS256
JWT_MIN=60
JWT_HOUR=23
JWT_DAY=6
JWT_MAX_DEVICES=5
JWT_IP_CHECK_ENABLED=False
JWT_DEVICE_SECRET=device-secret-key
JWT_REFRESH_TOKEN_EXPIRATION_TIME=30
JWT_SUSPICIOUS_ACTIVITY_MONITORING=True
JWT_ANDROID_DATA_COLLECTION=True

# Hash Functions
HASHING_ALGORITHM_LAYER_1=bcrypt
HASHING_ALGORITHM_LAYER_2=argon2
HASHING_SALT=your-random-salty-salt

# CORS
# (No .env variable for ALLOWED_ORIGINS, ALLOWED_METHODS, ALLOWED_HEADERS; see settings/base.py for defaults)

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_DIR=logs
LOG_ROTATION_SIZE=10 MB
LOG_RETENTION_TIME=30 days
LOG_COMPRESSION=gz

ENABLE_CONSOLE_LOGGING=True
ENABLE_FILE_LOGGING=True
ENABLE_JSON_LOGGING=False
ENABLE_ERROR_FILE=True
ENABLE_SECURITY_LOGGING=True
ENABLE_PERFORMANCE_LOGGING=True
ENABLE_REQUEST_LOGGING=True
ENABLE_CORRELATION_ID=True

MASK_SENSITIVE_DATA=True
LOG_REQUEST_BODY=False
LOG_RESPONSE_BODY=False
LOG_HEADERS=True
MAX_LOG_BODY_SIZE=10000

PERFORMANCE_THRESHOLD_MS=1000.0
ASYNC_LOGGING=True
BACKTRACE_ENABLED=True
DIAGNOSE_ENABLED=True
COLORIZE_CONSOLE=True

# Security Middleware
ENABLE_ATTACK_DETECTION=True
ENABLE_RATE_LIMITING=True
ENABLE_IP_BLOCKING=True
ENABLE_USER_AGENT_FILTERING=True
MAX_REQUEST_SIZE_MB=10.0
BLOCK_EMPTY_USER_AGENTS=False

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10
RATE_LIMIT_BLOCK_DURATION=15

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False

# Kafka settings
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=user_service_group
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=True
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_REQUEST_TIMEOUT_MS=40000
KAFKA_RETRY_BACKOFF_MS=100

# Email settings
EMAIL_SENDER=noreply@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=True
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password